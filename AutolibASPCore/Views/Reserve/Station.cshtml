@{
    ViewData["Title"] = "Choix du véhicule";
}

@if (Model != null)
{
    <div class="container d-flex justify-content-center">
        <div class="col-md-8 col-sm-8">
            <h1 class="text-center">Choisissez votre véhicule</h1>

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th> Borne</th>
                        <th> Véhicule</th>
                        <th> Catégorie</th>
                        <th> Batterie</th>
                        <th> Disponibilité</th>
                        <th> Réserver</th>
                    </tr>
                </thead>

                @foreach (StationData s in Model)
                {
                <tr>
                    <td>
                        @s.Borne.IdBorne.ToString()
                    </td>
                    <td>
                        @s.TypeVehicule.TypeVehicule1.ToString()
                    </td>
                    <td>
                        @s.TypeVehicule.Categorie.ToString()
                    </td>
                    <td>
                        @s.Vehicule.EtatBatterie.ToString()
                    </td>
                    <td>
                        @s.Vehicule.Disponibilite.ToString()
                    </td>
                    <td>
                        @Html.ActionLink("Réserver", "Index", "Home", null, new { @class = "btn btn-default btn-primary" })
                    </td>
                </tr>
                }
            </table>
            <div class="form-group">
                <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
                    @Html.ActionLink("Retourner à la liste des stations", "StationsList", "Reserve", null, new { @class = "btn btn-default btn-primary" })
                </div>
            </div>
        </div>
    </div>
}