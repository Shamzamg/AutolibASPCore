@model List<TypeVehicule>
@{
    ViewData["Title"] = "Vroom, et la réservation devient facile !";
    int i = 0;
}

@if (Model != null)
{


    <div class="text-center">
        <h1>Bienvenue sur Vroom !</h1>
        <h4>Voici quelques uns de nos véhicules, pour votre plus grand plaisir:</h4>
    </div>

    <div id="carouselIndicators" class="carousel slide w-50 text-center" data-ride="carousel">
        <!-- Indicateurs-->
        <ol class="carousel-indicators">
            <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselIndicators" data-slide-to="1"></li>
            <li data-target="#carouselIndicators" data-slide-to="2"></li>
        </ol>

        <!-- Carousel-->
        <div class="carousel-inner">

            @foreach (TypeVehicule t in Model)
            {
                if (i == 0)
                {
                    <div class="carousel-item active">
                        <img class="d-block w-100" src=@t.ImageVehicule alt="First slide">
                    </div>

                    i += 1;
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src=@t.ImageVehicule alt="Third slide">
                    </div>
                }
            }

        </div>

        <!-- Contrôles-->
        <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

}
